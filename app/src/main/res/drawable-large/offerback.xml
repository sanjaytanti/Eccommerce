<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow" />
            <stroke android:width="1dp" android:color="@color/yellow" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="15dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>
</selector>